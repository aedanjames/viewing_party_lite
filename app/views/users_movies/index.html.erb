<% if @top_rated %>
  <section id="top20">
      <section class="p-4 mb-2 bg-dark text-white"><h2>Top Rated Movies </h2></section>
      <br>
    </section>
  <section class="container">
    <section class="row">
      <% @top_rated.each do |movie| %>
        <section class="col-6">
          <h6><%= link_to "#{movie.title}", "/movies/#{movie.id}", class:"link-dark" %>: Rated <%= movie.vote_average %> </h6>
          <br>
        </section>
      <% end %>
    </section>
  </section>
  </section>
<% end %>

<% if @found_movies %>
  <section id="results">
    <section class="p-4 mb-2 bg-dark text-white"><h2>Movie Results</h2></section>
    </section>
  <section class="container">
    <section class="row">
    <% @found_movies.each do |movie| %>
      <section class="col-6">
        <h6><%= link_to "#{movie.title}", "/movies/#{movie.id}", class:"link-dark" %>: Rated <%= movie.vote_average %> </h6>
        <br>
        </section>
    <% end %>
    </section>
    </section>
  </section>
  </section>
<% end %>
